<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Travel Express - Votre Passerelle vers l'Excellence Académique</title>
    @vite(['resources/css/app.css', 'resources/js/app.js'])
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        * {
            scroll-behavior: smooth;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            overflow-x: hidden;
            background: linear-gradient(180deg, #f8fafc 0%, #f1f5f9 100%);
        }

        h1, h2, h3, h4, h5, h6, .heading-font {
            font-family: 'Montserrat', sans-serif;
            letter-spacing: -0.02em;
            line-height: 1.2;
        }

        /* Gradient Text - Enhanced */
        .gradient-text {
            background: linear-gradient(135deg, #e2a60a 0%, #f4c430 50%, #ffd700 75%, #e2a60a 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            background-size: 300% 300%;
            animation: gradientShift 4s ease infinite;
            font-weight: 800;
            position: relative;
            display: inline-block;
        }

        @keyframes gradientShift {
            0%, 100% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
        }

        /* Reading Progress Bar - Enhanced */
        .reading-progress {
            position: fixed;
            top: 0;
            left: 0;
            height: 3px;
            background: linear-gradient(90deg, #e2a60a 0%, #f4c430 50%, #ffd700 100%);
            z-index: 9999;
            transition: width 0.15s ease;
            box-shadow: 0 2px 10px rgba(226,166,10,0.3);
        }

        /* Header Moderne Styles */
        #header {
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        #header.header-scrolled {
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

        /* Hero Slider - Enhanced with Parallax Effect */
        .hero-slider {
            position: relative;
            width: 100%;
            height: 700px;
            overflow: hidden;
        }

        .slider-item {
            position: absolute;
            width: 100%;
            height: 100%;
            opacity: 0;
            transition: opacity 1.5s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .slider-item.active {
            opacity: 1;
        }

        .slider-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transform: scale(1.1);
            transition: transform 8s ease-out;
        }

        .slider-item.active img {
            transform: scale(1);
        }

        .slider-overlay {
            position: absolute;
            inset: 0;
            background: linear-gradient(135deg, rgba(0,0,0,0.75) 0%, rgba(43,108,176,0.6) 50%, rgba(0,0,0,0.7) 100%);
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .slider-overlay::before {
            content: '';
            position: absolute;
            inset: 0;
            background:
                radial-gradient(circle at 20% 30%, rgba(226,166,10,0.15) 0%, transparent 50%),
                radial-gradient(circle at 80% 70%, rgba(43,108,176,0.15) 0%, transparent 50%);
            animation: pulseGlow 6s ease-in-out infinite;
        }

        @keyframes pulseGlow {
            0%, 100% { opacity: 0.5; }
            50% { opacity: 0.8; }
        }

        .slider-dots {
            position: absolute;
            bottom: 40px;
            left: 50%;
            transform: translateX(-50%);
            display: flex;
            gap: 15px;
            z-index: 10;
        }

        .slider-dot {
            width: 14px;
            height: 14px;
            border-radius: 50%;
            background: rgba(255,255,255,0.4);
            cursor: pointer;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            border: 2px solid transparent;
            position: relative;
        }

        .slider-dot::before {
            content: '';
            position: absolute;
            inset: -4px;
            border-radius: 50%;
            border: 2px solid rgba(226,166,10,0);
            transition: all 0.4s;
        }

        .slider-dot.active {
            background: linear-gradient(135deg, #e2a60a, #f4c430);
            width: 50px;
            border-radius: 8px;
            box-shadow: 0 4px 15px rgba(226,166,10,0.6);
        }

        .slider-dot.active::before {
            border-color: rgba(226,166,10,0.4);
        }

        .slider-dot:hover {
            background: rgba(255,255,255,0.8);
            transform: scale(1.2);
        }

        /* Slider Navigation Arrows */
        .slider-arrow {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: rgba(255,255,255,0.15);
            backdrop-filter: blur(10px);
            border: 2px solid rgba(255,255,255,0.3);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            z-index: 20;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            opacity: 0;
        }

        .hero-slider:hover .slider-arrow {
            opacity: 1;
        }

        .slider-arrow-prev {
            left: 30px;
        }

        .slider-arrow-next {
            right: 30px;
        }

        .slider-arrow:hover {
            background: rgba(226,166,10,0.9);
            border-color: rgba(226,166,10,1);
            transform: translateY(-50%) scale(1.1);
            box-shadow: 0 8px 25px rgba(226,166,10,0.4);
        }

        .slider-arrow:active {
            transform: translateY(-50%) scale(0.95);
        }

        @media (max-width: 768px) {
            .slider-arrow {
                width: 40px;
                height: 40px;
                opacity: 1;
            }

            .slider-arrow-prev {
                left: 15px;
            }

            .slider-arrow-next {
                right: 15px;
            }
        }

        /* Floating Particles Animation */
        .particle {
            position: absolute;
            border-radius: 50%;
            background: rgba(255,255,255,0.15);
            animation: particleFloat 15s infinite;
            opacity: 0.6;
        }

        .particle-1 {
            width: 80px;
            height: 80px;
            top: 20%;
            left: 10%;
            animation-duration: 20s;
            animation-delay: 0s;
        }

        .particle-2 {
            width: 60px;
            height: 60px;
            top: 60%;
            left: 80%;
            animation-duration: 25s;
            animation-delay: 2s;
            background: rgba(226,166,10,0.15);
        }

        .particle-3 {
            width: 100px;
            height: 100px;
            top: 40%;
            left: 70%;
            animation-duration: 30s;
            animation-delay: 4s;
        }

        .particle-4 {
            width: 50px;
            height: 50px;
            top: 80%;
            left: 20%;
            animation-duration: 18s;
            animation-delay: 1s;
            background: rgba(226,166,10,0.2);
        }

        .particle-5 {
            width: 70px;
            height: 70px;
            top: 10%;
            left: 90%;
            animation-duration: 22s;
            animation-delay: 3s;
        }

        @keyframes particleFloat {
            0%, 100% {
                transform: translate(0, 0) scale(1);
                opacity: 0.4;
            }
            25% {
                transform: translate(50px, -50px) scale(1.2);
                opacity: 0.6;
            }
            50% {
                transform: translate(-30px, -80px) scale(0.8);
                opacity: 0.4;
            }
            75% {
                transform: translate(30px, -40px) scale(1.1);
                opacity: 0.5;
            }
        }

        /* Educational Cards - Professional Enhanced */
        .edu-card {
            position: relative;
            overflow: hidden;
            border-radius: 20px;
            transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
            background: white;
            box-shadow: 0 10px 30px rgba(0,0,0,0.08);
            border: 1px solid rgba(43,108,176,0.1);
        }

        .edu-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(120deg, transparent, rgba(226,166,10,0.3), transparent);
            transition: left 0.8s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .edu-card::after {
            content: '';
            position: absolute;
            inset: 0;
            border-radius: 20px;
            padding: 2px;
            background: linear-gradient(135deg, #e2a60a, #2B6CB0);
            -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
            -webkit-mask-composite: xor;
            mask-composite: exclude;
            opacity: 0;
            transition: opacity 0.5s;
        }

        .edu-card:hover::before {
            left: 100%;
        }

        .edu-card:hover::after {
            opacity: 1;
        }

        .edu-card:hover {
            transform: translateY(-15px) scale(1.02);
            box-shadow: 0 25px 50px rgba(43,108,176,0.25);
        }

        /* Service Card - New Enhanced Style */
        .service-card {
            background: white;
            border-radius: 16px;
            padding: 2rem;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            border: 1px solid rgba(0,0,0,0.05);
            box-shadow: 0 8px 20px rgba(0,0,0,0.06);
            position: relative;
            overflow: hidden;
        }

        .service-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
            background: linear-gradient(90deg, #e2a60a, #f4c430);
            transform: scaleX(0);
            transform-origin: left;
            transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .service-card:hover::before {
            transform: scaleX(1);
        }

        .service-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(43,108,176,0.15);
            border-color: rgba(226,166,10,0.3);
        }

        /* Testimonial Cards - Ultra Professional */
        .testimonial-card {
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #2B6CB0 100%);
            border-radius: 24px;
            padding: 2.5rem;
            color: white;
            position: relative;
            overflow: hidden;
            transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
            box-shadow: 0 15px 35px rgba(0,0,0,0.2);
        }

        .testimonial-card::before {
            content: '"';
            position: absolute;
            top: 10px;
            left: 20px;
            font-size: 140px;
            color: rgba(226,166,10,0.15);
            font-family: Georgia, serif;
            line-height: 1;
            font-weight: bold;
        }

        .testimonial-card::after {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(226,166,10,0.1) 0%, transparent 70%);
            opacity: 0;
            transition: opacity 0.5s;
        }

        .testimonial-card:hover::after {
            opacity: 1;
        }

        .testimonial-card:hover {
            transform: translateY(-10px) scale(1.03);
            box-shadow: 0 25px 50px rgba(226,166,10,0.3);
        }

        /* Advanced Animations */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(50px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes slideInLeft {
            from {
                opacity: 0;
                transform: translateX(-80px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        @keyframes slideInRight {
            from {
                opacity: 0;
                transform: translateX(80px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        @keyframes float {
            0%, 100% { transform: translateY(0) rotate(0deg); }
            25% { transform: translateY(-15px) rotate(2deg); }
            50% { transform: translateY(-25px) rotate(0deg); }
            75% { transform: translateY(-15px) rotate(-2deg); }
        }

        @keyframes scaleIn {
            from {
                opacity: 0;
                transform: scale(0.8);
            }
            to {
                opacity: 1;
                transform: scale(1);
            }
        }

        @keyframes rotateIn {
            from {
                opacity: 0;
                transform: rotate(-10deg) scale(0.9);
            }
            to {
                opacity: 1;
                transform: rotate(0) scale(1);
            }
        }

        .animate-fade-in-up {
            animation: fadeInUp 1s cubic-bezier(0.4, 0, 0.2, 1) forwards;
            opacity: 0;
        }

        .animate-slide-in-left {
            animation: slideInLeft 1s cubic-bezier(0.4, 0, 0.2, 1) forwards;
            opacity: 0;
        }

        .animate-slide-in-right {
            animation: slideInRight 1s cubic-bezier(0.4, 0, 0.2, 1) forwards;
            opacity: 0;
        }

        .animate-float {
            animation: float 4s ease-in-out infinite;
        }

        .animate-scale-in {
            animation: scaleIn 0.8s cubic-bezier(0.4, 0, 0.2, 1) forwards;
            opacity: 0;
        }

        .animate-rotate-in {
            animation: rotateIn 1s cubic-bezier(0.4, 0, 0.2, 1) forwards;
            opacity: 0;
        }

        /* Stagger Animation Delays */
        .delay-100 { animation-delay: 0.1s; }
        .delay-200 { animation-delay: 0.2s; }
        .delay-300 { animation-delay: 0.3s; }
        .delay-400 { animation-delay: 0.4s; }
        .delay-500 { animation-delay: 0.5s; }
        .delay-600 { animation-delay: 0.6s; }

        /* Scroll to Top Button - Enhanced */
        .scroll-to-top {
            position: fixed;
            bottom: 30px;
            right: 30px;
            width: 55px;
            height: 55px;
            border-radius: 50%;
            background: linear-gradient(135deg, #e2a60a, #f4c430);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            opacity: 0;
            visibility: hidden;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            z-index: 1000;
            box-shadow: 0 8px 20px rgba(226,166,10,0.4);
            border: 3px solid rgba(255,255,255,0.2);
        }

        .scroll-to-top.show {
            opacity: 1;
            visibility: visible;
        }

        .scroll-to-top:hover {
            transform: translateY(-8px) scale(1.1);
            box-shadow: 0 15px 35px rgba(226,166,10,0.6);
            background: linear-gradient(135deg, #f4c430, #ffd700);
        }

        /* WhatsApp Button - Enhanced */
        .whatsapp-float {
            position: fixed;
            bottom: 105px;
            right: 30px;
            width: 65px;
            height: 65px;
            border-radius: 50%;
            background: linear-gradient(135deg, #25D366, #128C7E);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            box-shadow: 0 8px 20px rgba(37,211,102,0.4);
            z-index: 1000;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            border: 3px solid rgba(255,255,255,0.2);
            animation: pulse 2s infinite;
        }

        @keyframes pulse {
            0%, 100% {
                box-shadow: 0 8px 20px rgba(37,211,102,0.4), 0 0 0 0 rgba(37,211,102,0.7);
            }
            50% {
                box-shadow: 0 8px 20px rgba(37,211,102,0.6), 0 0 0 15px rgba(37,211,102,0);
            }
        }

        .whatsapp-float:hover {
            transform: scale(1.15) rotate(10deg);
            box-shadow: 0 12px 30px rgba(37,211,102,0.6);
            animation: none;
        }

        /* Navigation Enhancement */
        .nav-link {
            position: relative;
            padding: 0.5rem 1rem;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .nav-link::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            width: 0;
            height: 3px;
            background: linear-gradient(90deg, #e2a60a, #f4c430);
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            transform: translateX(-50%);
            border-radius: 2px 2px 0 0;
        }

        .nav-link:hover::after {
            width: 90%;
        }

        .nav-link:hover {
            color: #e2a60a !important;
            transform: translateY(-2px);
        }

        /* Stats Counter - Enhanced */
        .stat-number {
            font-size: 3.5rem;
            font-weight: 900;
            background: linear-gradient(135deg, #2B6CB0 0%, #e2a60a 50%, #f4c430 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-size: 200% 200%;
            animation: gradientShift 3s ease infinite;
            letter-spacing: -0.03em;
        }

        /* Glass Effect - Enhanced */
        .glass-effect {
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(20px) saturate(180%);
            border: 1px solid rgba(255, 255, 255, 0.3);
            box-shadow: 0 8px 32px rgba(0,0,0,0.1);
        }

        /* Gold Accent Line - Enhanced */
        .gold-accent {
            width: 90px;
            height: 5px;
            background: linear-gradient(90deg, transparent, #e2a60a, #f4c430, #e2a60a, transparent);
            border-radius: 3px;
            margin: 1.5rem auto;
            position: relative;
            animation: shimmer 2s infinite;
        }

        @keyframes shimmer {
            0% { opacity: 0.5; transform: scaleX(0.8); }
            50% { opacity: 1; transform: scaleX(1); }
            100% { opacity: 0.5; transform: scaleX(0.8); }
        }

        /* Button Enhancements */
        .btn-primary {
            position: relative;
            overflow: hidden;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .btn-primary::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            border-radius: 50%;
            background: rgba(255,255,255,0.3);
            transform: translate(-50%, -50%);
            transition: width 0.6s, height 0.6s;
        }

        .btn-primary:hover::before {
            width: 300px;
            height: 300px;
        }

        .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 35px rgba(43,108,176,0.4);
        }

        /* Section Spacing - Enhanced */
        .section-padding {
            padding: 6rem 0;
        }

        @media (max-width: 1024px) {
            .section-padding {
                padding: 4rem 0;
            }
        }

        @media (max-width: 768px) {
            .section-padding {
                padding: 3rem 0;
            }
        }

        /* Responsive */
        @media (max-width: 768px) {
            .hero-slider {
                height: 500px;
            }

            .stat-number {
                font-size: 2.5rem;
            }

            h1 {
                font-size: 2rem !important;
            }

            h2 {
                font-size: 1.75rem !important;
            }

            .whatsapp-float, .scroll-to-top {
                width: 55px;
                height: 55px;
            }
        }

        /* Reveal Animation on Scroll */
        .reveal {
            opacity: 0;
            transform: translateY(50px);
            transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .reveal.active {
            opacity: 1;
            transform: translateY(0);
        }

        /* Parallax Background */
        .parallax-bg {
            position: relative;
            background-attachment: fixed;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }
    </style>
</head>
